<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f7">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutButtonAtas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#009dd7"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPhoto"
                    android:layout_width="75dp"
                    android:layout_height="34dp"
                    android:text="Photo" />

                <Button
                    android:id="@+id/btnEvent"
                    android:layout_width="73dp"
                    android:layout_height="33dp"
                    android:text="Event" />
            </LinearLayout>

            <ImageView
                android:id="@+id/photoUser"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layoutButtonAtas"
                android:src="@drawable/edmon"
                android:layout_above="@+id/linearPost" />

            <customfonts.MyEditText
                android:id="@+id/inputPost"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ada informasi terbaru ?"
                android:layout_below="@+id/layoutButtonAtas"
                android:layout_toRightOf="@+id/photoUser"
                android:layout_toEndOf="@+id/photoUser"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <LinearLayout
                android:id="@+id/linearPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#009dd7"
                android:orientation="horizontal"
                android:layout_below="@+id/inputPost"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/btnPost"
                    android:layout_width="77dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Post" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewTimeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_below="@+id/relativePost"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</FrameLayout>
