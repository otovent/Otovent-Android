<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp">

        <customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="CREATE POST"
            android:textColor="#177EE5"
            android:textSize="34dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/head"
            android:layout_marginTop="18dp"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="Description"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:padding="5dp"
            android:textColor="#177EE5"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/linkUpload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Upload"
            android:layout_alignTop="@+id/Upload"
            android:layout_toEndOf="@+id/Upload"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="Your photo"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:padding="5dp"
            android:textColor="#177EE5"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/Upload" />

        <customfonts.MyTextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/biruAsik"
            android:gravity="center"
            android:padding="5dp"
            android:text="Post"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/linkUpload"
            android:layout_alignStart="@+id/linkUpload" />

        <Button
            android:id="@+id/Upload"
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2b73e1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <customfonts.MyTextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2b73e1"
            android:gravity="center"
            android:text="Back"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/post"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/post"
            android:layout_toStartOf="@+id/post" />

    </RelativeLayout>

</FrameLayout>