<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f7">


    <customfonts.MyEditText
        android:id="@+id/first_name"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search People Name"
        android:layout_marginLeft="16dp"
        android:textColorHint="@android:color/black"
        android:textColor="@color/colortext"
        android:background="#0000"
        android:paddingTop="10dp"
        android:gravity="left"
        android:layout_marginBottom="5dp"/>



    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="36dp"
        android:background="#177EE5"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_user_timeline"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/view5"
            android:layout_alignStart="@+id/view5"
            android:layout_alignTop="@+id/myTextView4"
            android:background="@drawable/edmon" />

        <customfonts.MyTextView
            android:id="@+id/myTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="12dp"
            android:text="Edmon Koto"
            android:textColor="#177EE5"
            android:textSize="20dp" />

        <customfonts.MyTextView
            android:id="@+id/myTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="38dp"
            android:text="Arduino and Node MCU Enthusiast"
            android:textSize="16dp" />

        <customfonts.MyTextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myTextView5"
            android:layout_alignEnd="@+id/view5"
            android:layout_alignRight="@+id/view5"
            android:layout_alignTop="@+id/myTextView4"
            android:background="#2b73e1"
            android:gravity="center"
            android:padding="5dp"
            android:text="ADD"
            android:textColor="#fff"
            android:textSize="16dp" />


        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:background="#177EE5" />
    </RelativeLayout>
</FrameLayout>