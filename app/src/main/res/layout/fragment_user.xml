<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="android.project.techno.otovent_android.menu.fragment.UserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="174dp"
            android:background="#BFC9CA"
            android:id="@+id/frameLayout2">

            <customfonts.MyTextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Racing"
                android:textAlignment="center" />

            <customfonts.MyTextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:text="Convertible"
                android:textAlignment="center" />

            <customfonts.MyTextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                android:text="Coupe"
                android:textAlignment="center" />


        </FrameLayout>

        <customfonts.MyTextView
            android:id="@+id/myTitleGrid"
            android:text="Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:layout_below="@+id/frameLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:background="@drawable/pic_timeline1">

            <ImageView
                android:id="@+id/logo_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/png_pencil" />

            <customfonts.MyTextView
                android:id="@+id/myTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"
                android:text="Mod Car Enthusiast."
                android:textColor="#FFFFFF" />

            <customfonts.MyTextView
                android:id="@+id/myTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="Andrew N."
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="122dp"
                android:layout_height="98dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/profile_pic" />

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
